    {
    <script>
        function RazorFunction(id) {
            //var model = @Model.productos;
            const json = JSON.parse("@GetJSONString()");
            console.log('test', json, "@GetJSONString()")
            document.getElementById("rowProducts").innerHTML = "test";
        }
    </script>
} 